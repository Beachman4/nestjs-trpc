{
  "name": "nestjs-trpc-workspace",
  "version": "1.1.1",
  "homepage": "https://nestjs-trpc.io",
  "scripts": {
    "build": "tsc -b -v packages",
    "changelog": "lerna-changelog",
    "clean": "tsc -b --clean",
    "format": "prettier packages/**/*.ts --ignore-path ./.prettierignore --write",
    "lint": "eslint 'packages/**/*.ts' --fix",
    "release": "release-it",
    "prepublish:npm": "pnpm build && pnpm changelog | pbcopy",
    "publish:npm": "lerna publish",
    "prepublish:next": "pnpm build",
    "publish:next": "lerna publish --dist-tag next",
    "prepare": "husky"
  },
  "author": {
    "name": "Kevin Edry",
    "email": "kevin.edry@gmail.com",
    "url": "https://kevin-edry.com"
  },
  "license": "MIT",
  "engines": {
    "node": "14 || 15 || 16 || 17 || 18 || 19 || 20",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*",
    "examples/**/*",
    "examples/*",
    "docs"
  ],
  "packageManager": "pnpm@8.12.1",
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-angular": "^17.4.4",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/prompt-cli": "^19.3.1",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.11",
    "@eslint/js": "^9.6.0",
    "@nestjs/cli": "^9.3.0",
    "eslint": "9.7.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.2.1",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "husky": "9.1.1",
    "lerna-changelog": "2.2.0",
    "lint-staged": "15.2.7",
    "prettier": "2.8.8",
    "reflect-metadata": "0.2.2",
    "release-it": "17.1.1",
    "rimraf": "^4.4.1",
    "tsconfig-paths": "^4.2.0",
    "lerna": "8.1.6",
    "ts-jest": "29.2.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "changelog": {
    "labels": {
      "feature": "Features",
      "bug": "Bug fixes",
      "enhancement": "Enhancements",
      "docs": "Docs",
      "dependencies": "Dependencies"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KevinEdry/nestjs-trpc"
  }
}
