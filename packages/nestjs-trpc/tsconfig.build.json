{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./lib",
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist", "tests/**/*", "*.spec.ts"]
}
